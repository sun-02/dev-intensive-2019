<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tv_text"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="Hello World!"
        android:textSize="@dimen/font_normal_16" />

    <ImageView
        android:id="@+id/iv_bender"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/bender_dance"
        tools:ignore="ContentDescription"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/color_primary"
        android:layout_marginTop="@dimen/spacing_normal_16">

        <EditText
            android:id="@+id/et_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_normal_16"
            android:layout_marginRight="@dimen/spacing_normal_16"
            android:layout_weight="1"
            android:hint="Введите текст"
            android:importantForAutofill="no"
            android:inputType="text"
            android:lines="1"
            android:paddingTop="@dimen/spacing_normal_16"
            android:paddingBottom="@dimen/spacing_normal_16"
            android:textColor="@color/color_gray_light"
            android:textColorHint="@color/color_gray_light"
            android:textSize="@dimen/font_normal_16"
            android:imeOptions="actionDone"/>

        <ImageView
            android:id="@+id/iv_send"
            android:layout_width="@dimen/button_normal_32"
            android:layout_height="@dimen/button_normal_32"
            android:layout_gravity="center"
            app:srcCompat="@android:drawable/ic_menu_send"
            tools:ignore="ContentDescription" />

    </LinearLayout>

</LinearLayout>